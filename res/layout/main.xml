<?xml version="1.0" encoding="utf-8"?>
<org.dobots.robotalk.client.utility.LockableScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/scrollview"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="fill" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <View
            android:id="@+id/spacer1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="20dp" />

        <Button
            android:id="@+id/btnConnect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Connect Robot" />

        <View
            android:id="@+id/spacer2"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:minHeight="20dp" />

        <Button
            android:id="@+id/btnZMQSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="ZMQ Settings" />

        <View
            android:id="@+id/spacer3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="20dp" />
        
    </LinearLayout>

</org.dobots.robotalk.client.utility.LockableScrollView>